<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Heading -->
    <TextView
        android:id="@+id/recommendedHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recommended Places"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Info Section -->
    <ScrollView
        android:id="@+id/scrollSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/recommendedHeading"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sunset Alley Cafe Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sunsetCafeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/purple_100"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Sunset Cafe Title -->
                    <TextView
                        android:id="@+id/sunsetCafeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunset Alley Cafe"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_marginBottom="8dp" />

                    <!-- Location -->
                    <TextView
                        android:id="@+id/sunsetCafeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Hauz Khas Village"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="8dp" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/sunsetCafeDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="☕ Known for its rooftop views and chill playlists, Sunset Alley is where Instagram meets caffeine. Try their Nutella frappé!"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SprintX Sports Academy Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/sportsAcademyCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/purple_100"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Sports Academy Title -->
                    <TextView
                        android:id="@+id/sportsAcademyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SprintX Sports Academy"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_marginBottom="8dp" />

                    <!-- Location -->
                    <TextView
                        android:id="@+id/sportsAcademyLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 Sector 22, Noida"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="8dp" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/sportsAcademyDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🏋️‍♀️ Professional training in basketball, athletics, and swimming. Certified coaches, world-class tracks, and weekend fitness bootcamps available."
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mocha Brew Cafe Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mochaCafeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="@color/purple_100"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Mocha Brew Cafe Title -->
                    <TextView
                        android:id="@+id/mochaCafeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mocha Brew Cafe"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_700"
                        android:layout_marginBottom="8dp" />

                    <!-- Location -->
                    <TextView
                        android:id="@+id/mochaCafeLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📍 GK 2, New Delhi"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="8dp" />

                    <!-- Description -->
                    <TextView
                        android:id="@+id/mochaCafeDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="☕ A cozy hangout spot with rustic interiors, handcrafted lattes, and live acoustic evenings. Perfect for study sessions or relaxed meetups."
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar with Buttons -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple_200"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Book Table Button -->
        <Button
            android:id="@+id/bookButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Book Table"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:padding="14dp" />

        <!-- Space Between Buttons -->
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <!-- Share Button -->
        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="16sp"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:padding="14dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>