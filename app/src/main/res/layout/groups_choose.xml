<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/custom_purple">

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:backgroundTint="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Heading -->
    <TextView
        android:id="@+id/choose_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE GROUPS"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_button" />

    <!-- Groups Section -->
    <ScrollView
        android:id="@+id/groups_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/choose_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/groups_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Group 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/group_image_1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sample"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/group_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Name: Study Buddies"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_location_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Library Circle, Sector-9, Dwarka, New Delhi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_members_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members: 5 people"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_date_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 15th April 2025"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_timing_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timing: 3:00-7:00 PM"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/join_button_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/leave_button_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave"
                        android:backgroundTint="@android:color/holo_red_light" />
                </LinearLayout>
            </LinearLayout>

            <!-- Group 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/group_image_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sample"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/group_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Name: Cricket Champs"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_location_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: DDA Sports Complex, Sector-11, Dwarka, New Delhi"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_members_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members: 11 people"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_date_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 20th April 2025"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/group_timing_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timing: 3:00-6:00 PM"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/join_button_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Join"
                        android:backgroundTint="@android:color/holo_green_light"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/leave_button_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leave"
                        android:backgroundTint="@android:color/holo_red_light" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>