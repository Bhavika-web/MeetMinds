<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/academyImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sports"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Info Section -->
    <ScrollView
        android:id="@+id/scrollSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/academyImage"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Academy Name -->
            <TextView
                android:id="@+id/academyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SprintX Sports Academy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="12dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/academyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Sector 22, Noida"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="10dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/academyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ‹ï¸â€â™€ï¸ Professional training in basketball, athletics, and swimming. Certified coaches, world-class tracks, and weekend fitness bootcamps available."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- Features Title -->
            <TextView
                android:id="@+id/featuresTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨ Features:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="8dp" />

            <!-- Features List -->
            <TextView
                android:id="@+id/featuresList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Certified Coaches\nâ€¢ World-class tracks\nâ€¢ Weekend Bootcamps\nâ€¢ Swimming &amp; Basketball"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="20dp" />

            <!-- Timings -->
            <TextView
                android:id="@+id/academyTimings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•“ Timings: 7:00 AM - 9:00 PM"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Bar with Buttons -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/purple_200"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Book Slot Button -->
        <Button
            android:id="@+id/bookButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Book Slot"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_700"
            android:textColor="@android:color/white"
            android:padding="12dp" />

        <!-- Space Between Buttons -->
        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <!-- Share Button -->
        <Button
            android:id="@+id/shareButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Share"
            android:textSize="16sp"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:padding="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>